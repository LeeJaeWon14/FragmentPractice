<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "center"
    android:background="@color/white">
    <RadioGroup
        android:id = "@+id/rdoGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity = "center">
        <RadioButton
            android:id = "@+id/rdoFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/str_radio_fix"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>
        <RadioButton
            android:id = "@+id/rdoVariable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/str_radio_variable"
            android:textStyle="bold"
            android:layout_marginRight="5dp" />
        <RadioButton
            android:id = "@+id/rdoAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/str_radio_anim"
            android:textStyle="bold" />
    </RadioGroup>
    <EditText
        android:id = "@+id/edt_inputCount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint = "@string/str_input_count"
        android:textAlignment="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id = "@+id/btn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/str_dialog_input_button"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>
        <Button
            android:id = "@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/str_dialog_exit_button"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>